{
  "name": "Gemini Search",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["sidePanel", "scripting", "tabs", "storage", "webNavigation"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Open Gemini Search"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "options_page": "options.html",
  "icons": {
    "64": "logo.png"
  }
}
