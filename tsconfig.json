{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "ESNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
